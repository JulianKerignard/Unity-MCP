{
  "name": "mcp-unity-bridge",
  "version": "1.0.0",
  "description": "MCP Bridge for Unity - Connects Claude to Unity via WebSocket",
  "type": "module",
  "main": "build/index.js",
  "bin": {
    "mcp-unity": "./build/index.js"
  },
  "scripts": {
    "build": "tsc",
    "start": "node build/index.js",
    "dev": "tsx src/index.ts",
    "watch": "tsc --watch",
    "clean": "rm -rf build",
    "rebuild": "npm run clean && npm run build",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "ws": "^8.16.0",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/ws": "^8.5.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "mcp",
    "unity",
    "bridge",
    "claude",
    "ai",
    "game-development"
  ],
  "author": "",
  "license": "MIT"
}
